    <!-- CTA Section -->
    <section class="card bg-gradient-to-r from-indigo-600 to-blue-600 text-white text-center p-10 lg:p-14 shadow-xl">
        <h3 class="text-3xl font-bold mb-3">Ready to Get Started?</h3>
        <p class="text-lg text-indigo-100 mb-8">Join thousands of customers who have transformed their lives with our microfinance solutions.</p>
        <a href="/customer/register" class="bg-white text-indigo-700 px-8 py-3 rounded-xl font-semibold hover:bg-indigo-50 transition">Register Now</a>
