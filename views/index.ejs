    <script>
        // Initialize Lucide Icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }

        // Calculator Logic
        const amountSlider = document.getElementById('amount-slider');
        const durationSlider = document.getElementById('duration-slider');
        const amountDisplay = document.getElementById('amount-display');
        const durationDisplay = document.getElementById('duration-display');
        const monthlyPaymentDisplay = document.getElementById('monthly-payment');

        const interestRate = 0.05; // 5% monthly interest

        function calculateLoan() {
            const principal = parseFloat(amountSlider.value);
            const months = parseInt(durationSlider.value);
            
            // Simple interest calculation: (Principal + (Principal * Rate * Months)) / Months
            const totalInterest = principal * interestRate * months;
            const totalAmount = principal + totalInterest;
            const monthly = totalAmount / months;

            // Update UI
            amountDisplay.textContent = '$' + principal.toLocaleString();
            durationDisplay.textContent = months + (months === 1 ? ' Month' : ' Months');
            monthlyPaymentDisplay.textContent = '$' + monthly.toFixed(2);
        }

        amountSlider.addEventListener('input', calculateLoan);
        durationSlider.addEventListener('input', calculateLoan);

        // Mobile Menu Toggle
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');

        if (btn && menu) {
            btn.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        }

        // Initial calculation
        calculateLoan();
    </script>
