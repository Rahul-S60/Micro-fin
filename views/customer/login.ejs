<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Login - MicroFinance</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes slideInLeft {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        body { animation: fadeInUp 0.6s ease-out; }
        .form-control {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .form-control:hover {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.05);
        }
        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15) !important;
            border-color: #2563eb !important;
        }
        .btn-primary {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 10px 28px rgba(37, 99, 235, 0.2);
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 35px rgba(37, 99, 235, 0.3);
        }
        .btn-primary:active {
            transform: translateY(0);
        }
    </style>
</head>
<body class="page-bg min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <div class="w-full max-w-6xl">
        <div class="surface shadow-2xl grid grid-cols-1 lg:grid-cols-2 overflow-hidden min-h-0 lg:min-h-auto rounded-2xl">
            <!-- Left Panel -->
            <div class="hidden lg:flex flex-col p-8 xl:p-12 bg-gradient-to-br from-indigo-600 via-blue-500 to-cyan-500 text-white relative overflow-hidden">
                <!-- Animated Background Elements -->
                <div class="absolute inset-0 opacity-30">
                    <div class="absolute -top-40 -right-40 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
                    <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
                </div>

                <div class="relative z-10 flex flex-col h-full">
                    <!-- Header -->
                    <div class="flex items-center gap-4 mb-12">
                        <div class="h-16 w-16 rounded-3xl bg-white/20 backdrop-blur-md flex items-center justify-center shadow-lg border border-white/30">
                            <i class="fas fa-lock-open text-3xl"></i>
                        </div>
                        <div>
                            <p class="text-white/80 text-xs font-bold uppercase tracking-widest">Secure Banking</p>
                            <h1 class="text-4xl font-bold">Customer Access</h1>
                        </div>
                    </div>

                    <!-- Description -->
                    <p class="text-white/95 text-lg leading-relaxed font-light mb-8">
                        Access your loans, track applications in real-time, and manage your borrowing with confidence on our secure platform.
                    </p>

                    <!-- Features List -->
                    <div class="space-y-4 mb-auto">
                        <div class="flex items-start gap-4 group">
                            <div class="w-8 h-8 rounded-full bg-white/30 flex items-center justify-center flex-shrink-0 group-hover:bg-white/40 transition mt-1">
                                <i class="fas fa-check text-sm font-bold"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">Instant Loan Applications</p>
                                <p class="text-white/80 text-sm">Complete your application in minutes</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4 group">
                            <div class="w-8 h-8 rounded-full bg-white/30 flex items-center justify-center flex-shrink-0 group-hover:bg-white/40 transition mt-1">
                                <i class="fas fa-check text-sm font-bold"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">Real-time Tracking</p>
                                <p class="text-white/80 text-sm">Monitor your applications 24/7</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4 group">
                            <div class="w-8 h-8 rounded-full bg-white/30 flex items-center justify-center flex-shrink-0 group-hover:bg-white/40 transition mt-1">
                                <i class="fas fa-check text-sm font-bold"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">Flexible Repayment Plans</p>
                                <p class="text-white/80 text-sm">Choose what works for you</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4 group">
                            <div class="w-8 h-8 rounded-full bg-white/30 flex items-center justify-center flex-shrink-0 group-hover:bg-white/40 transition mt-1">
                                <i class="fas fa-check text-sm font-bold"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">Expert Support</p>
                                <p class="text-white/80 text-sm">Dedicated team available anytime</p>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="pt-8 border-t border-white/20">
                        <div class="flex items-center gap-3 text-white/90 text-sm font-medium">
                            <i class="fas fa-shield-alt text-lg"></i>
                            <span>Bank-level encryption & security</span>
                        </div>
                        <p class="text-white/70 text-xs mt-2">Your information is protected with industry-leading security protocols</p>
                    </div>
                </div>
            </div>

            <!-- Right Panel - Form -->
            <div class="p-6 sm:p-8 md:p-10 lg:p-12 flex flex-col justify-center">
                <!-- Mobile Header -->
                <div class="flex justify-center lg:hidden mb-6 sm:mb-8">
                    <div class="inline-flex items-center justify-center h-16 w-16 sm:h-20 sm:w-20 rounded-3xl bg-gradient-to-br from-indigo-600 to-blue-500 text-white shadow-xl">
                        <i class="fas fa-lock-open text-3xl sm:text-4xl"></i>
                    </div>
                </div>

                <!-- Heading -->
                <div class="text-center lg:text-left mb-8 lg:mb-10 space-y-2">
                    <div class="flex items-center gap-2 mb-3 md:mb-4">
                        <div class="hidden sm:flex flex-1 h-1 bg-gradient-to-r from-indigo-600 to-transparent rounded-full"></div>
                        <span class="inline-block px-2.5 sm:px-3 py-1 sm:py-1.5 bg-green-100 text-green-700 text-xs font-bold uppercase tracking-wider rounded-full flex items-center gap-2 whitespace-nowrap">
                            <span class="w-2 h-2 rounded-full bg-green-600 animate-pulse"></span>
                            <span class="hidden sm:inline">Verified &</span> Secure
                        </span>
                        <div class="hidden sm:flex flex-1 h-1 bg-gradient-to-l from-indigo-600 to-transparent rounded-full"></div>
                    </div>
                    <h1 class="text-3xl sm:text-4xl lg:text-3xl font-bold text-slate-900 tracking-tight">Welcome Back</h1>
                    <p class="text-slate-600 text-sm sm:text-base lg:text-sm">Sign in to access your loans and dashboard</p>
                </div>

                <!-- Login Form -->
                <form id="loginForm" class="space-y-5 sm:space-y-6">
                    <div class="space-y-2">
                        <label class="block text-sm font-bold text-slate-800 flex items-center gap-2.5">
                            <div class="w-5 h-5 rounded-lg bg-indigo-100 flex items-center justify-center">
                                <i class="fas fa-envelope text-indigo-600 text-xs"></i>
                            </div>
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            name="email"
                            class="form-control w-full px-4 py-3 text-slate-900 placeholder-slate-400 border-2 border-slate-200 focus:border-indigo-600 focus:ring-0 rounded-xl transition-all duration-300"
                            placeholder="you@example.com"
                            required
                        >
                        <span class="form-error" id="emailError"></span>
                    </div>

                    <div class="space-y-2">
                        <div class="flex items-center justify-between">
                            <label class="block text-sm font-bold text-slate-800 flex items-center gap-2.5">
                                <div class="w-5 h-5 rounded-lg bg-indigo-100 flex items-center justify-center">
                                    <i class="fas fa-key text-indigo-600 text-xs"></i>
                                </div>
                                Password
                            </label>
                            <a href="#" class="text-xs font-semibold text-indigo-600 hover:text-indigo-700 hover:underline transition">
                                Forgot it?
                            </a>
                        </div>
                        <div class="relative">
                            <input 
                                type="password" 
                                name="password"
                                class="form-control w-full px-4 py-3 text-slate-900 placeholder-slate-400 border-2 border-slate-200 focus:border-indigo-600 focus:ring-0 rounded-xl pr-12 transition-all duration-300"
                                id="passwordInput"
                                placeholder="Enter your password"
                                required
                            >
                            <button 
                                type="button"
                                class="absolute right-4 top-3.5 text-slate-500 hover:text-slate-700 transition-colors duration-200"
                                onclick="togglePasswordVisibility()"
                            >
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span class="form-error" id="passwordError"></span>
                    </div>

                    <div class="flex items-center justify-between pt-2">
                        <label class="flex items-center gap-3 cursor-pointer group">
                            <input type="checkbox" class="h-5 w-5 rounded border-2 border-slate-300 text-indigo-600 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-0 transition" name="rememberMe">
                            <span class="text-sm font-medium text-slate-700 group-hover:text-slate-900">Remember me on this device</span>
                        </label>
                    </div>

                    <span class="form-error block" id="generalError"></span>

                    <button type="submit" class="btn btn-primary w-full py-3.5 mt-8 flex items-center justify-center gap-2.5 text-base font-bold bg-gradient-to-r from-indigo-600 to-blue-600 text-white rounded-xl hover:shadow-lg hover:shadow-indigo-200 transition-all duration-300 transform hover:-translate-y-1">
                        <span id="submitText">
                            <i class="fas fa-sign-in-alt"></i> Sign In to Dashboard
                        </span>
                        <span id="submitLoader" class="hidden">
                            <i class="fas fa-spinner fa-spin"></i> Verifying...
                        </span>
                    </button>
                </form>

                <!-- Divider -->
                <div class="mt-8 relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t-2 border-slate-200"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="px-3 bg-white text-slate-500 text-xs font-semibold uppercase tracking-wider">New customer?</span>
                    </div>
                </div>

                <!-- Register Button -->
                <a href="/customer/register" class="btn btn-secondary-ghost w-full mt-6 py-3 flex items-center justify-center gap-2.5 text-indigo-600 font-bold border-2 border-indigo-200 hover:bg-indigo-50 rounded-xl transition-all duration-300">
                    <i class="fas fa-user-plus"></i> Create Account
                </a>

                <!-- Footer Links -->
                <div class="mt-8 text-center space-y-2">
                    <p class="text-xs text-slate-600">
                        <a href="#" class="hover:text-indigo-600 hover:underline font-medium transition">Terms of Service</a> 
                        <span class="text-slate-400 mx-1.5">â€¢</span>
                        <a href="#" class="hover:text-indigo-600 hover:underline font-medium transition">Privacy Policy</a>
                    </p>
                    <a href="/" class="text-xs text-slate-600 hover:text-indigo-600 hover:underline font-medium transition inline-flex items-center gap-1">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');
            const icon = event.target.closest('button').querySelector('i');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = document.querySelector('input[name="email"]').value;
            const password = document.querySelector('input[name="password"]').value;

            // Clear previous errors
            document.getElementById('generalError').textContent = '';
            document.getElementById('submitText').classList.add('hidden');
            document.getElementById('submitLoader').classList.remove('hidden');

            try {
                const response = await fetch('/api/auth/customer/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, password })
                });

                const data = await response.json();

                if (data.success) {
                    localStorage.setItem('token', data.token);
                    localStorage.setItem('user', JSON.stringify(data.customer));
                    window.location.href = '/customer/dashboard';
                } else {
                    document.getElementById('generalError').textContent = data.message || 'Login failed';
                }
            } catch (error) {
                document.getElementById('generalError').textContent = 'Network error. Please try again.';
            } finally {
                document.getElementById('submitText').classList.remove('hidden');
                document.getElementById('submitLoader').classList.add('hidden');
            }
        });
    </script>
</body>
</html>
