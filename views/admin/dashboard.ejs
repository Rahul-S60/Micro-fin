<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - GrowthLoans</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/feedback.css">
</head>
<body class="page-bg">
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle Menu">
        <i class="fas fa-bars text-xl"></i>
    </button>
    
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <div class="dashboard-shell">
        <!-- Sidebar -->
        <aside class="sidebar-modern" id="sidebar">
            <div class="mb-8 flex items-center gap-3">
                <svg viewBox="0 0 200 200" class="h-11 w-11 flex-shrink-0">
                    <circle cx="100" cy="100" r="98" fill="white" stroke="#cbd5e1" stroke-width="3"/>
                    <text x="100" y="130" text-anchor="middle" fill="#5a7d9a" font-size="90" font-weight="500" font-family="sans-serif">N</text>
                    <path d="M 60 155 Q 85 155, 135 105" fill="transparent" stroke="#d9ead3" stroke-width="3" stroke-linecap="round"/>
                    <path d="M 65 145 Q 90 145, 140 95" fill="transparent" stroke="#93c47d" stroke-width="3" stroke-linecap="round"/>
                    <g transform="translate(140, 95) rotate(-45)">
                        <line x1="0" y1="0" x2="-15" y2="0" stroke="#93c47d" stroke-width="3" stroke-linecap="round"/>
                        <line x1="0" y1="0" x2="0" y2="15" stroke="#93c47d" stroke-width="3" stroke-linecap="round"/>
                    </g>
                </svg>
                <div>
                    <p class="text-xs text-slate-300 uppercase tracking-wider">Admin Portal</p>
                    <h1 class="text-xl font-bold text-white tracking-wide">Navachethana</h1>
                </div>
            </div>

            <div class="nav-group">
                <p class="nav-title">Main Menu</p>
                <a href="#" data-section="dashboard" class="active"><i class="fas fa-chart-line"></i> Dashboard</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Management</p>
                <a href="/admin/customers"><i class="fas fa-users"></i> Customers</a>
                <a href="#" data-section="applications"><i class="fas fa-file-alt"></i> Applications</a>
                <a href="/admin/loan-products"><i class="fas fa-credit-card"></i> Loan Products</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Verification</p>
                <a href="/admin/kyc"><i class="fas fa-check-circle"></i> KYC Verification</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Analytics</p>
                <a href="/admin/reports"><i class="fas fa-chart-bar"></i> Reports</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Account</p>
                <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
                <button id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="content-area">
            <!-- Dashboard Overview Section -->
            <%- include('sections/dashboard') %>

            <!-- Applications Section -->
            <%- include('sections/applications') %>
        </main>
    </div>

    <!-- Scripts -->
    <script src="/js/notifications.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/admin/common.js"></script>
</body>
</html>
