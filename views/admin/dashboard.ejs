<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - MicroFinance</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/feedback.css">
</head>
<body class="page-bg">
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle Menu">
        <i class="fas fa-bars text-xl"></i>
    </button>
    
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <div class="dashboard-shell">
        <!-- Sidebar -->
        <aside class="sidebar-modern" id="sidebar">
            <div class="mb-8 flex items-center gap-3">
                <div class="h-11 w-11 rounded-xl bg-white/10 flex items-center justify-center text-white">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                    <p class="text-xs text-white/70">Admin Portal</p>
                    <h1 class="text-lg font-bold">MicroFinance</h1>
                </div>
            </div>

            <div class="nav-group">
                <p class="nav-title">Main Menu</p>
                <a href="#dashboard" class="active"><i class="fas fa-chart-line"></i> Dashboard</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Management</p>
                <a href="#customers"><i class="fas fa-users"></i> Customers</a>
                <a href="#applications"><i class="fas fa-file-alt"></i> Applications</a>
                <a href="#loans"><i class="fas fa-credit-card"></i> Loan Products</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Verification</p>
                <a href="#kyc"><i class="fas fa-check-circle"></i> KYC Verification</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Account</p>
                <a href="#settings"><i class="fas fa-cog"></i> Settings</a>
                <button id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="content-area">
            <div class="content-topbar">
                <div>
                    <p class="text-sm text-slate-500">Operations Control</p>
                    <h2 class="text-2xl font-bold text-slate-900">Dashboard</h2>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative hidden md:block">
                        <input type="text" placeholder="Search..." class="pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    <div class="flex items-center gap-3">
                        <button class="text-gray-600 hover:text-gray-800 relative">
                            <i class="fas fa-bell text-xl"></i>
                            <span class="absolute -top-1 -right-2 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
                        </button>
                        <div class="h-10 w-10 rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center font-bold">
                            <i class="fas fa-user-shield"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="stat-grid mb-6">
                <div class="stat-card-modern">
                    <div class="stat-number" id="totalCustomers">0</div>
                    <div class="stat-label">Total Customers</div>
                    <p class="text-xs text-white/70 mt-1"><i class="fas fa-arrow-up"></i> +5% this month</p>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="pendingApplications">0</div>
                    <div class="stat-label">Pending Applications</div>
                    <p class="text-xs text-white/70 mt-1">Requires action</p>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="activeLoans">0</div>
                    <div class="stat-label">Active Loans</div>
                    <p class="text-xs text-white/70 mt-1">Outstanding</p>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="disbursedAmount">₹0</div>
                    <div class="stat-label">Amount Disbursed</div>
                    <p class="text-xs text-white/70 mt-1">Total portfolio</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div class="card">
                    <h3 class="font-bold text-slate-900 mb-4 flex items-center gap-2">
                        <i class="fas fa-users text-blue-600"></i> Customer Overview
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span>Verified Customers</span>
                            <span class="font-bold" id="verifiedCustomers">0</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded h-2 overflow-hidden">
                            <div class="bg-blue-600 h-2" style="width: 70%"></div>
                        </div>
                        <div class="flex justify-between">
                            <span>KYC Pending</span>
                            <span class="font-bold text-orange-600" id="kycPendingCount">0</span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h3 class="font-bold text-slate-900 mb-4 flex items-center gap-2">
                        <i class="fas fa-chart-pie text-green-600"></i> Application Status
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span>Approved</span>
                            <span class="font-bold text-green-600" id="approvedCount">0</span>
                        </div>
                        <div class="flex justify-between">
                            <span>Rejected</span>
                            <span class="font-bold text-red-600" id="rejectedCount">0</span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h3 class="font-bold text-slate-900 mb-4 flex items-center gap-2">
                        <i class="fas fa-clock text-purple-600"></i> System Info
                    </h3>
                    <div class="space-y-3 text-sm text-gray-600">
                        <div>
                            <p class="font-semibold text-gray-800" id="adminName">Admin Name</p>
                            <p id="adminRole">Administrator</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card table-elevated">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold">Recent Applications</h3>
                    <span class="pill-indicator"><i class="fas fa-history"></i> Live feed</span>
                </div>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Customer</th>
                                <th>Loan Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="applicationsTable">
                            <tr>
                                <td colspan="6" class="text-center text-gray-600 py-8">Loading applications...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Check authentication
        const token = localStorage.getItem('adminToken');
        const admin = JSON.parse(localStorage.getItem('admin') || '{}');

        if (!token) {
            window.location.href = '/admin/login';
        }

        document.getElementById('adminName').textContent = admin.firstName + ' ' + admin.lastName;
        document.getElementById('adminRole').textContent = admin.role.replace('_', ' ').toUpperCase();

        // Logout
        document.getElementById('logoutBtn').addEventListener('click', () => {
            localStorage.removeItem('adminToken');
            localStorage.removeItem('admin');
            window.location.href = '/admin/login';
        });

        // Load dashboard data
        async function loadDashboard() {
            try {
                const response = await fetch('/api/admin/dashboard', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (data.success) {
                    const stats = data.data.statistics;
                    const customers = stats.customers;
                    const loans = stats.loans;

                    document.getElementById('totalCustomers').textContent = customers.total;
                    document.getElementById('verifiedCustomers').textContent = customers.verified;
                    document.getElementById('kycPendingCount').textContent = customers.kycPending;
                    document.getElementById('pendingApplications').textContent = loans.pending;
                    document.getElementById('activeLoans').textContent = loans.active;
                    document.getElementById('disbursedAmount').textContent = '₹' + (loans.disbursedAmount / 100000).toFixed(1) + 'L';

                    // Load recent applications
                    if (data.data.recentApplications && data.data.recentApplications.length > 0) {
                        const applicationsHtml = data.data.recentApplications.map(app => {
                            const isPending = app.status === 'pending' || app.status === 'under_review';
                            const isApproved = app.status === 'approved';
                            const actions = `
                                ${isPending ? `<button class="btn btn-primary btn-sm mr-2" onclick="approveApplication('${app._id}')"><i class='fas fa-check'></i> Approve</button>` : ''}
                                ${isPending ? `<button class="btn btn-danger btn-sm mr-2" onclick="rejectApplication('${app._id}')"><i class='fas fa-times'></i> Reject</button>` : ''}
                                ${isApproved ? `<button class="btn btn-light btn-sm" onclick="activateApplication('${app._id}')"><i class='fas fa-play'></i> Activate</button>` : ''}
                            `;
                            return `
                            <tr>
                                <td>${app.applicationNumber || app._id}</td>
                                <td>${app.customerId.firstName} ${app.customerId.lastName}</td>
                                <td>₹${app.loanAmount.toLocaleString()}</td>
                                <td><span class="badge badge-${app.status === 'pending' ? 'pending' : app.status === 'approved' ? 'approved' : app.status === 'rejected' ? 'rejected' : 'pending'}">${app.status}</span></td>
                                <td>${new Date(app.createdAt).toLocaleDateString()}</td>
                                <td>${actions || '<span class="text-gray-400">No actions</span>'}</td>
                            </tr>`;
                        }).join('');
                        document.getElementById('applicationsTable').innerHTML = applicationsHtml;
                    }
                }
            } catch (error) {
                console.error('Error loading dashboard:', error);
            }
        }

        async function approveApplication(id) {
            if (!confirm('Approve this application?')) return;
            const loadingToast = typeof notificationManager !== 'undefined' ? notificationManager.loading('Approving', 'Processing approval...') : null;
            try {
                const res = await fetch(`/api/admin/application/${id}/approve`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify({ remarks: 'Approved via dashboard' })
                });
                const result = await res.json();
                if (result.success) {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'success', title: 'Approved', message: result.message });
                    if (result.nextSteps) showNotification(result.nextSteps, 'info', 'Next steps');
                    loadDashboard();
                } else {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'error', title: 'Failed', message: result.message || 'Failed to approve' });
                    showNotification(result.message || 'Failed to approve', 'error', 'Approval Error');
                }
            } catch (e) {
                console.error(e);
                showNotification('Network or server error', 'error', 'Approval Error');
            }
        }

        async function rejectApplication(id) {
            const reason = prompt('Enter rejection reason (min 5 characters):');
            if (!reason || reason.trim().length < 5) return;
            const loadingToast = typeof notificationManager !== 'undefined' ? notificationManager.loading('Rejecting', 'Processing rejection...') : null;
            try {
                const res = await fetch(`/api/admin/application/${id}/reject`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify({ reason })
                });
                const result = await res.json();
                if (result.success) {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'warning', title: 'Rejected', message: result.message });
                    if (result.rejectionReasons && result.rejectionReasons.length) {
                        showNotification(result.rejectionReasons.join('\n'), 'info', 'Reasons recorded');
                    }
                    loadDashboard();
                } else {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'error', title: 'Failed', message: result.message || 'Failed to reject' });
                    showNotification(result.message || 'Failed to reject', 'error', 'Rejection Error');
                }
            } catch (e) {
                console.error(e);
                showNotification('Network or server error', 'error', 'Rejection Error');
            }
        }

        async function activateApplication(id) {
            if (!confirm('Activate this approved loan?')) return;
            const loadingToast = typeof notificationManager !== 'undefined' ? notificationManager.loading('Activating', 'Activating loan...') : null;
            try {
                const res = await fetch(`/api/admin/application/${id}/activate`, {
                    method: 'PUT',
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const result = await res.json();
                if (result.success) {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'success', title: 'Activated', message: result.message });
                    if (result.nextSteps) showNotification(result.nextSteps, 'info', 'Next steps');
                    loadDashboard();
                } else {
                    if (loadingToast && typeof notificationManager !== 'undefined') loadingToast.update({ type: 'error', title: 'Failed', message: result.message || 'Failed to activate' });
                    showNotification(result.message || 'Failed to activate', 'error', 'Activation Error');
                }
            } catch (e) {
                console.error(e);
                showNotification('Network or server error', 'error', 'Activation Error');
            }
        }

        // Load on page load
        loadDashboard();

        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const mobileOverlay = document.getElementById('mobileOverlay');
        
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                mobileOverlay.classList.toggle('active');
                const icon = mobileMenuBtn.querySelector('i');
                icon.classList.toggle('fa-bars');
                icon.classList.toggle('fa-times');
            });
        }
        
        if (mobileOverlay) {
            mobileOverlay.addEventListener('click', () => {
                sidebar.classList.remove('active');
                mobileOverlay.classList.remove('active');
                const icon = mobileMenuBtn.querySelector('i');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
            });
        }
    </script>
    <script src="/js/notifications.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
