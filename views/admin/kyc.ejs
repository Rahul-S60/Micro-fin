<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KYC Verification - MicroFinance Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/feedback.css">
</head>
<body class="page-bg">
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle Menu">
        <i class="fas fa-bars text-xl"></i>
    </button>
    
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <div class="dashboard-shell">
        <!-- Sidebar -->
        <aside class="sidebar-modern" id="sidebar">
            <div class="mb-8 flex items-center gap-3">
                <div class="h-11 w-11 rounded-xl bg-white/10 flex items-center justify-center text-white">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                    <p class="text-xs text-white/70">Admin Portal</p>
                    <h1 class="text-lg font-bold">MicroFinance</h1>
                </div>
            </div>

            <div class="nav-group">
                <p class="nav-title">Main Menu</p>
                <a href="/admin/dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Management</p>
                <a href="/admin/customers"><i class="fas fa-users"></i> Customers</a>
                <a href="/admin/applications"><i class="fas fa-file-alt"></i> Applications</a>
                <a href="/admin/loan-products"><i class="fas fa-credit-card"></i> Loan Products</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Verification</p>
                <a href="/admin/kyc" class="active"><i class="fas fa-check-circle"></i> KYC Verification</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Analytics</p>
                <a href="/admin/reports"><i class="fas fa-chart-bar"></i> Reports</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Account</p>
                <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
                <button id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="content-area">
            <div class="content-topbar">
                <div>
                    <p class="text-sm text-slate-500">KYC Verification</p>
                    <h2 class="text-2xl font-bold text-slate-900">Customer Verification</h2>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative hidden md:block">
                        <input type="text" id="searchInput" placeholder="Search customers..." class="pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-6">
                <div class="flex flex-col md:flex-row gap-4 items-center">
                    <div class="flex-1">
                        <label class="block text-sm font-medium text-gray-700 mb-2">KYC Status</label>
                        <select id="statusFilter" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="">All Statuses</option>
                            <option value="pending">Pending</option>
                            <option value="verified">Verified</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="flex items-end gap-2">
                        <button id="filterBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg flex items-center gap-2 transition">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                        <button id="resetBtn" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg transition">
                            Reset
                        </button>
                    </div>
                </div>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="stat-card-modern">
                    <div class="stat-number" id="totalCount">0</div>
                    <div class="stat-label">Total Customers</div>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="pendingCount">0</div>
                    <div class="stat-label">Pending KYC</div>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="verifiedCount">0</div>
                    <div class="stat-label">KYC Verified</div>
                </div>
            </div>

            <!-- KYC Queue -->
            <div class="card table-elevated">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold">KYC Verification Queue</h3>
                    <div class="flex items-center gap-2">
                        <span class="text-sm text-gray-600" id="pageInfo">Page 1</span>
                        <button id="prevBtn" class="btn btn-sm btn-light" disabled><i class="fas fa-chevron-left"></i></button>
                        <button id="nextBtn" class="btn btn-sm btn-light"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
                
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Current Status</th>
                                <th>Submitted Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="kycTable">
                            <tr>
                                <td colspan="6" class="text-center text-gray-600 py-8">Loading customers...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <!-- KYC Verification Modal -->
    <div id="verificationModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="flex justify-between items-center p-6 border-b border-gray-200 sticky top-0 bg-white">
                <h3 class="text-xl font-bold" id="verificationTitle">Customer KYC</h3>
                <button onclick="closeVerificationModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div id="verificationContent" class="p-6">
                <!-- Content will be populated -->
            </div>
        </div>
    </div>

    <!-- Verification Decision Modal -->
    <div id="decisionModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-md w-full">
            <div class="flex justify-between items-center p-6 border-b border-gray-200">
                <h3 class="text-xl font-bold" id="decisionTitle">Verify KYC</h3>
                <button onclick="closeDecisionModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Decision *</label>
                        <select id="decisionStatus" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="">Select Decision</option>
                            <option value="verified">Approve - Verify Customer</option>
                            <option value="rejected">Reject - Request Documents</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Remarks *</label>
                        <textarea id="decisionRemarks" placeholder="Enter remarks..." class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" rows="3"></textarea>
                    </div>
                    <div class="flex gap-2 pt-4 border-t border-gray-200">
                        <button onclick="submitDecision()" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition">
                            <i class="fas fa-check mr-2"></i> Submit Decision
                        </button>
                        <button onclick="closeDecisionModal()" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg transition">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('adminToken');
        if (!token) window.location.href = '/admin/login';

        let currentPage = 1;
        const limit = 10;
        let currentCustomerId = null;

        // Initialize
        loadCustomers();
        loadStats();

        // Event Listeners
        document.getElementById('filterBtn').addEventListener('click', () => {
            currentPage = 1;
            loadCustomers();
        });

        document.getElementById('resetBtn').addEventListener('click', () => {
            document.getElementById('statusFilter').value = '';
            document.getElementById('searchInput').value = '';
            currentPage = 1;
            loadCustomers();
        });

        document.getElementById('searchInput').addEventListener('keyup', debounce(() => {
            currentPage = 1;
            loadCustomers();
        }, 500));

        document.getElementById('nextBtn').addEventListener('click', () => {
            currentPage++;
            loadCustomers();
        });

        document.getElementById('prevBtn').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                loadCustomers();
            }
        });

        document.getElementById('logoutBtn').addEventListener('click', logout);

        // Functions
        function debounce(fn, delay) {
            let timeoutId;
            return function(...args) {
                clearTimeout(timeoutId);
                timeoutId = setTimeout(() => fn(...args), delay);
            };
        }

        async function loadStats() {
            try {
                const response = await fetch('/api/admin/dashboard', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();
                if (data.success) {
                    const stats = data.data.statistics.customers;
                    document.getElementById('totalCount').textContent = stats.total;
                    document.getElementById('pendingCount').textContent = stats.kycPending;
                    document.getElementById('verifiedCount').textContent = stats.verified;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        async function loadCustomers() {
            try {
                const status = document.getElementById('statusFilter').value;
                const search = document.getElementById('searchInput').value;

                let url = `/api/admin/customers?page=${currentPage}&limit=${limit}`;
                if (status) url += `&kycStatus=${status}`;

                const response = await fetch(url, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                const data = await response.json();

                if (data.success) {
                    const filtered = search 
                        ? data.data.filter(c => 
                            c.firstName.toLowerCase().includes(search.toLowerCase()) ||
                            c.lastName.toLowerCase().includes(search.toLowerCase()) ||
                            c.email.toLowerCase().includes(search.toLowerCase()) ||
                            (c.phoneNumber && c.phoneNumber.includes(search))
                          )
                        : data.data;

                    if (filtered.length === 0) {
                        document.getElementById('kycTable').innerHTML = '<tr><td colspan="6" class="text-center text-gray-600 py-8">No customers found</td></tr>';
                    } else {
                        document.getElementById('kycTable').innerHTML = filtered.map(customer => `
                            <tr>
                                <td class="font-semibold">${customer.firstName} ${customer.lastName}</td>
                                <td class="text-sm">${customer.email}</td>
                                <td class="text-sm">${customer.phoneNumber || 'N/A'}</td>
                                <td>
                                    <span class="badge badge-${customer.kycStatus === 'verified' ? 'success' : customer.kycStatus === 'pending' ? 'pending' : 'danger'}">
                                        ${customer.kycStatus.charAt(0).toUpperCase() + customer.kycStatus.slice(1)}
                                    </span>
                                </td>
                                <td class="text-sm text-gray-600">${new Date(customer.createdAt).toLocaleDateString()}</td>
                                <td>
                                    <div class="flex gap-2">
                                        <button onclick="viewKYC('${customer._id}')" class="text-indigo-600 hover:text-indigo-800 text-lg" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        ${customer.kycStatus === 'pending' || customer.kycStatus === 'rejected' ? `
                                            <button onclick="openDecisionModal('${customer._id}')" class="text-green-600 hover:text-green-800 text-lg" title="Verify/Reject">
                                                <i class="fas fa-check-double"></i>
                                            </button>
                                        ` : ''}
                                    </div>
                                </td>
                            </tr>
                        `).join('');
                    }

                    document.getElementById('pageInfo').textContent = `Page ${currentPage} of ${data.pagination.pages || 1}`;
                    document.getElementById('nextBtn').disabled = currentPage >= (data.pagination.pages || 1);
                    document.getElementById('prevBtn').disabled = currentPage <= 1;
                }
            } catch (error) {
                console.error('Error loading customers:', error);
                document.getElementById('kycTable').innerHTML = '<tr><td colspan="6" class="text-center text-red-600 py-8">Error loading data</td></tr>';
            }
        }

        async function viewKYC(id) {
            try {
                const response = await fetch(`/api/admin/customer/${id}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();
                if (data.success) {
                    const customer = data.data.customer;
                    document.getElementById('verificationTitle').textContent = `${customer.firstName} ${customer.lastName} - KYC`;
                    document.getElementById('verificationContent').innerHTML = `
                        <div class="space-y-4">
                            <div class="p-4 bg-blue-50 rounded">
                                <p class="text-sm font-semibold text-blue-900">Customer Information</p>
                                <div class="mt-3 space-y-2 text-sm">
                                    <p><span class="text-gray-600">Email:</span> <span class="font-medium">${customer.email}</span></p>
                                    <p><span class="text-gray-600">Phone:</span> <span class="font-medium">${customer.phoneNumber || 'N/A'}</span></p>
                                    <p><span class="text-gray-600">Account Status:</span> <span class="font-medium">${customer.accountStatus}</span></p>
                                </div>
                            </div>

                            <div class="p-4 bg-gray-50 rounded">
                                <p class="text-sm font-semibold text-gray-900">KYC Status</p>
                                <div class="mt-3 space-y-2 text-sm">
                                    <p><span class="text-gray-600">Current Status:</span> <span class="badge badge-${customer.kycStatus === 'verified' ? 'success' : customer.kycStatus === 'pending' ? 'pending' : 'danger'}">${customer.kycStatus}</span></p>
                                    <p><span class="text-gray-600">Verified:</span> <span class="font-medium">${customer.isVerified ? 'Yes' : 'No'}</span></p>
                                </div>
                            </div>

                            <div class="p-4 bg-green-50 rounded">
                                <p class="text-sm font-semibold text-green-900">Documents Status</p>
                                <div class="mt-3 space-y-2 text-sm">
                                    <p><span class="text-gray-600">KYC Documents:</span> <span class="font-medium">${customer.kycDocuments?.length || 0} files submitted</span></p>
                                    <p><span class="text-gray-600">Documents Verified:</span> <span class="font-medium">${customer.documentsVerified ? 'Yes' : 'No'}</span></p>
                                </div>
                            </div>
                        </div>
                    `;
                    document.getElementById('verificationModal').classList.remove('hidden');
                }
            } catch (error) {
                alert('Error loading KYC details');
            }
        }

        function closeVerificationModal() {
            document.getElementById('verificationModal').classList.add('hidden');
        }

        function openDecisionModal(id) {
            currentCustomerId = id;
            document.getElementById('decisionStatus').value = '';
            document.getElementById('decisionRemarks').value = '';
            document.getElementById('decisionModal').classList.remove('hidden');
        }

        function closeDecisionModal() {
            document.getElementById('decisionModal').classList.add('hidden');
            currentCustomerId = null;
        }

        async function submitDecision() {
            if (!currentCustomerId) return;

            const status = document.getElementById('decisionStatus').value;
            const remarks = document.getElementById('decisionRemarks').value;

            if (!status || !remarks.trim()) {
                alert('Please select a decision and add remarks');
                return;
            }

            try {
                const response = await fetch(`/api/admin/customer/${currentCustomerId}/kyc`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ status, remarks })
                });

                const data = await response.json();
                if (data.success) {
                    alert('KYC decision submitted successfully');
                    closeDecisionModal();
                    loadCustomers();
                    loadStats();
                } else {
                    alert(data.message || 'Error submitting decision');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error submitting decision');
            }
        }

        function logout() {
            localStorage.removeItem('adminToken');
            localStorage.removeItem('admin');
            window.location.href = '/admin/login';
        }

        // Mobile menu toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', () => {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('mobileOverlay').classList.toggle('active');
        });

        document.getElementById('mobileOverlay').addEventListener('click', () => {
            document.getElementById('sidebar').classList.remove('active');
            document.getElementById('mobileOverlay').classList.remove('active');
        });
    </script>
    <script src="/js/notifications.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
