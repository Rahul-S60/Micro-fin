<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Products - MicroFinance Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/feedback.css">
</head>
<body class="page-bg">
    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle Menu">
        <i class="fas fa-bars text-xl"></i>
    </button>
    
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <div class="dashboard-shell">
        <!-- Sidebar -->
        <aside class="sidebar-modern" id="sidebar">
            <div class="mb-8 flex items-center gap-3">
                <div class="h-11 w-11 rounded-xl bg-white/10 flex items-center justify-center text-white">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                    <p class="text-xs text-white/70">Admin Portal</p>
                    <h1 class="text-lg font-bold">MicroFinance</h1>
                </div>
            </div>

            <div class="nav-group">
                <p class="nav-title">Main Menu</p>
                <a href="/admin/dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Management</p>
                <a href="/admin/customers"><i class="fas fa-users"></i> Customers</a>
                <a href="/admin/applications"><i class="fas fa-file-alt"></i> Applications</a>
                <a href="/admin/loan-products" class="active"><i class="fas fa-credit-card"></i> Loan Products</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Verification</p>
                <a href="/admin/kyc"><i class="fas fa-check-circle"></i> KYC Verification</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Analytics</p>
                <a href="/admin/reports"><i class="fas fa-chart-bar"></i> Reports</a>
            </div>

            <div class="nav-group">
                <p class="nav-title">Account</p>
                <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
                <button id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="content-area">
            <div class="content-topbar">
                <div>
                    <p class="text-sm text-slate-500">Product Management</p>
                    <h2 class="text-2xl font-bold text-slate-900">Loan Products</h2>
                </div>
                <button id="addProductBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition">
                    <i class="fas fa-plus"></i> New Product
                </button>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="stat-card-modern">
                    <div class="stat-number" id="totalProducts">0</div>
                    <div class="stat-label">Total Products</div>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="activeProducts">0</div>
                    <div class="stat-label">Active Products</div>
                </div>
                <div class="stat-card-modern">
                    <div class="stat-number" id="totalDisburse">₹0</div>
                    <div class="stat-label">Total Disbursed</div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div id="productsContainer">
                    <!-- Products will be loaded here -->
                </div>
            </div>
        </main>
    </div>

    <!-- Add/Edit Product Modal -->
    <div id="productModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="flex justify-between items-center p-6 border-b border-gray-200 sticky top-0 bg-white">
                <h3 class="text-xl font-bold" id="productModalTitle">Add New Product</h3>
                <button type="button" data-action="close-product-modal" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <form id="productForm" class="p-6">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Product Name *</label>
                        <input type="text" id="productName" required class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="e.g., Personal Loan">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category *</label>
                        <select id="productCategory" required class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="">Select Category</option>
                            <option value="personal">Personal Loan</option>
                            <option value="business">Business Loan</option>
                            <option value="agricultural">Agricultural Loan</option>
                            <option value="home">Home Loan</option>
                            <option value="education">Education Loan</option>
                        </select>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Min Loan Amount (₹) *</label>
                            <input type="number" id="minAmount" required min="0" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Max Loan Amount (₹) *</label>
                            <input type="number" id="maxAmount" required min="0" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Interest Rate (% p.a.) *</label>
                        <input type="number" id="interestRate" required min="0" max="100" step="0.01" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Min Tenure (Months) *</label>
                            <input type="number" id="minTenure" required min="1" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Max Tenure (Months) *</label>
                            <input type="number" id="maxTenure" required min="1" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                        <textarea id="description" required minlength="10" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" rows="3" placeholder="Product description"></textarea>
                    </div>

                    <!-- Required Documents Section -->
                    <div class="border-t pt-4 mt-4">
                        <div class="flex items-center justify-between mb-3">
                            <label class="block text-sm font-medium text-gray-700">
                                <i class="fas fa-file-upload text-indigo-600 mr-2"></i> Required Documents
                            </label>
                            <button type="button" id="addDocumentBtn" class="text-xs bg-indigo-100 text-indigo-700 px-2 py-1 rounded hover:bg-indigo-200">
                                <i class="fas fa-plus mr-1"></i> Add Document
                            </button>
                        </div>
                        <div id="documentsContainer" class="space-y-3 bg-gray-50 p-3 rounded-lg">
                            <p class="text-xs text-gray-600">No required documents added yet. Click "Add Document" to specify what documents customers must provide.</p>
                        </div>
                    </div>

                    <div>
                        <label class="flex items-center gap-2">
                            <input type="checkbox" id="isActive" checked class="rounded">
                            <span class="text-sm font-medium text-gray-700">Active Product</span>
                        </label>
                    </div>

                    <div class="flex gap-2 pt-4 border-t border-gray-200">
                        <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition">
                            <i class="fas fa-save mr-2"></i> Save Product
                        </button>
                        <button type="button" data-action="close-product-modal" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg transition">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Product Details Modal -->
    <div id="detailsModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-2xl w-full">
            <div class="flex justify-between items-center p-6 border-b border-gray-200">
                <h3 class="text-xl font-bold" id="detailsTitle">Product Details</h3>
                <button type="button" data-action="close-details-modal" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div id="detailsContent" class="p-6">
                <!-- Content will be populated -->
            </div>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('adminToken');
        if (!token) window.location.href = '/admin/login';

        let currentEditId = null;
        let currentDocuments = []; // Store required documents

        // Initialize
        loadProducts();

        // Document Management Functions
        function openAddModal() {
            document.getElementById('productModalTitle').textContent = 'Add New Product';
            document.getElementById('productForm').reset();
            document.getElementById('isActive').checked = true;
            currentEditId = null;
            currentDocuments = [];
            renderDocuments();
            document.getElementById('productModal').classList.remove('hidden');
        }

        function renderDocuments() {
            const container = document.getElementById('documentsContainer');
            if (currentDocuments.length === 0) {
                container.innerHTML = '<p class="text-xs text-gray-600">No required documents added yet. Click "Add Document" to specify what documents customers must provide.</p>';
                return;
            }
            container.innerHTML = currentDocuments.map((doc, idx) => `
                <div class="bg-white p-3 rounded border border-gray-200 flex items-center justify-between">
                    <div class="flex-1"><p class="text-sm font-medium">${doc.name}</p>${doc.description ? `<p class="text-xs text-gray-600">${doc.description}</p>` : ''}<p class="text-xs text-gray-500">Type: ${doc.fileType} • ${doc.isRequired ? 'Required' : 'Optional'}</p></div>
                    <button type="button" class="remove-doc-btn text-red-600 ml-2" data-idx="${idx}"><i class="fas fa-trash"></i></button>
                </div>
            `).join('');
            document.querySelectorAll('.remove-doc-btn').forEach(btn => btn.addEventListener('click', (e) => {
                e.preventDefault();
                currentDocuments.splice(parseInt(btn.dataset.idx), 1);
                renderDocuments();
            }));
        }

        document.getElementById('addDocumentBtn').addEventListener('click', (e) => {
            e.preventDefault();
            const docName = prompt('Enter document name (e.g., Aadhar, PAN, Bank Statement):');
            if (!docName) return;
            const docDescription = prompt('Enter description (optional):') || '';
            const fileType = ['pdf', 'image', 'document', 'any'].includes(prompt('File type (pdf/image/document/any):', 'document') || 'document') ? prompt('File type (pdf/image/document/any):', 'document') : 'document';
            const isRequired = confirm('Is this document required?');
            currentDocuments.push({ name: docName, description: docDescription, fileType: fileType || 'document', isRequired });
            renderDocuments();
        });

        // Event Listeners
        document.getElementById('addProductBtn').addEventListener('click', openAddModal);
        document.getElementById('productForm').addEventListener('submit', handleFormSubmit);
        document.getElementById('logoutBtn').addEventListener('click', logout);

        // Delegate product action buttons and modal close actions
        document.addEventListener('click', (e) => {
            const actionBtn = e.target.closest('[data-action]');
            if (!actionBtn) return;

            const action = actionBtn.dataset.action;
            const id = actionBtn.dataset.id;

            if (action === 'view-product' && id) {
                viewDetails(id);
            } else if (action === 'edit-product' && id) {
                editProduct(id);
            } else if (action === 'delete-product' && id) {
                deleteProduct(id);
            } else if (action === 'close-product-modal') {
                closeProductModal();
            } else if (action === 'close-details-modal') {
                closeDetailsModal();
            }
        });

        // Functions
        async function loadProducts() {
            try {
                const response = await fetch('/api/admin/loans', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();
                
                if (data.success) {
                    displayProducts(data.data);
                    updateStats(data.data);
                }
            } catch (error) {
                console.error('Error loading products:', error);
            }
        }

        function displayProducts(products) {
            const container = document.getElementById('productsContainer');
            
            if (products.length === 0) {
                container.innerHTML = '<div class="col-span-full text-center text-gray-600 py-12"><i class="fas fa-inbox text-4xl mb-4"></i><p>No loan products yet</p></div>';
                return;
            }

            container.innerHTML = products.map(product => `
                <div class="card hover:shadow-lg transition">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">${product.name}</h3>
                            <p class="text-sm text-gray-600">${getCategoryLabel(product.category)}</p>
                        </div>
                        <span class="badge badge-${product.isActive ? 'success' : 'danger'}">
                            ${product.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </div>

                    <div class="space-y-3 mb-4">
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Loan Amount</span>
                            <span class="font-semibold">₹${product.minAmount.toLocaleString()} - ₹${product.maxAmount.toLocaleString()}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Interest Rate</span>
                            <span class="font-semibold">${product.annualInterestRate}% p.a.</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Tenure</span>
                            <span class="font-semibold">${product.minTenureMonths} - ${product.maxTenureMonths} months</span>
                        </div>
                    </div>

                    <div class="border-t border-gray-200 pt-4 flex gap-2">
                        <button type="button" data-action="view-product" data-id="${product._id}" class="flex-1 btn btn-sm btn-light">
                            <i class="fas fa-eye mr-1"></i> View
                        </button>
                        <button type="button" data-action="edit-product" data-id="${product._id}" class="flex-1 btn btn-sm btn-primary">
                            <i class="fas fa-edit mr-1"></i> Edit
                        </button>
                        <button type="button" data-action="delete-product" data-id="${product._id}" class="flex-1 btn btn-sm btn-danger">
                            <i class="fas fa-trash mr-1"></i> Delete
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function updateStats(products) {
            const active = products.filter(p => p.isActive).length;
            document.getElementById('totalProducts').textContent = products.length;
            document.getElementById('activeProducts').textContent = active;
        }

        function getCategoryLabel(category) {
            const labels = {
                'personal': 'Personal Loan',
                'business': 'Business Loan',
                'agricultural': 'Agricultural Loan',
                'home': 'Home Loan',
                'education': 'Education Loan'
            };
            return labels[category] || category;
        }

        function openAddModal() {
            currentEditId = null;
            document.getElementById('productModalTitle').textContent = 'Add New Product';
            document.getElementById('productForm').reset();
            document.getElementById('isActive').checked = true;
            document.getElementById('productModal').classList.remove('hidden');
        }

        async function editProduct(id) {
            try {
                const response = await fetch(`/api/loans/${id}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();
                
                if (data.success) {
                    const product = data.data;
                    currentEditId = id;
                    document.getElementById('productModalTitle').textContent = 'Edit Product';
                    document.getElementById('productName').value = product.name;
                    document.getElementById('productCategory').value = product.category;
                    document.getElementById('minAmount').value = product.minAmount;
                    document.getElementById('maxAmount').value = product.maxAmount;
                    document.getElementById('interestRate').value = product.annualInterestRate;
                    document.getElementById('minTenure').value = product.minTenureMonths;
                    document.getElementById('maxTenure').value = product.maxTenureMonths;
                    document.getElementById('description').value = product.description || '';
                    document.getElementById('isActive').checked = product.isActive;
                    currentDocuments = product.requiredDocuments || [];
                    renderDocuments();
                    document.getElementById('productModal').classList.remove('hidden');
                }
            } catch (error) {
                alert('Error loading product details');
            }
        }

        function closeProductModal() {
            document.getElementById('productModal').classList.add('hidden');
            currentEditId = null;
        }

        async function handleFormSubmit(e) {
            e.preventDefault();

            const productData = {
                name: document.getElementById('productName').value,
                category: document.getElementById('productCategory').value,
                minAmount: parseInt(document.getElementById('minAmount').value),
                maxAmount: parseInt(document.getElementById('maxAmount').value),
                annualInterestRate: parseFloat(document.getElementById('interestRate').value),
                minTenureMonths: parseInt(document.getElementById('minTenure').value),
                maxTenureMonths: parseInt(document.getElementById('maxTenure').value),
                description: document.getElementById('description').value,
                isActive: document.getElementById('isActive').checked,
                requiredDocuments: currentDocuments
            };

            if (productData.minAmount >= productData.maxAmount) {
                alert('Max amount must be greater than min amount');
                return;
            }

            if (productData.minTenureMonths >= productData.maxTenureMonths) {
                alert('Max tenure must be greater than min tenure');
                return;
            }

            try {
                const method = currentEditId ? 'PUT' : 'POST';
                const url = currentEditId ? `/api/loans/${currentEditId}` : '/api/loans';

                const response = await fetch(url, {
                    method,
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(productData)
                });

                const data = await response.json();
                if (data.success) {
                    alert(`Product ${currentEditId ? 'updated' : 'created'} successfully`);
                    closeProductModal();
                    loadProducts();
                } else {
                    alert(data.message || 'Error saving product');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error saving product');
            }
        }

        async function viewDetails(id) {
            try {
                const response = await fetch(`/api/loans/${id}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();
                
                if (data.success) {
                    const product = data.data;
                    document.getElementById('detailsTitle').textContent = product.name;
                    document.getElementById('detailsContent').innerHTML = `
                        <div class="space-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <p class="text-xs text-gray-500">Category</p>
                                    <p class="font-semibold">${getCategoryLabel(product.category)}</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500">Status</p>
                                    <p class="font-semibold"><span class="badge badge-${product.isActive ? 'success' : 'danger'}">${product.isActive ? 'Active' : 'Inactive'}</span></p>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div>
                                <p class="font-semibold mb-3">Loan Terms</p>
                                <div class="grid grid-cols-2 gap-4">
                                    <div class="p-3 bg-blue-50 rounded">
                                        <p class="text-xs text-gray-600">Loan Amount Range</p>
                                        <p class="font-semibold">₹${product.minAmount.toLocaleString()} - ₹${product.maxAmount.toLocaleString()}</p>
                                    </div>
                                    <div class="p-3 bg-green-50 rounded">
                                        <p class="text-xs text-gray-600">Interest Rate</p>
                                        <p class="font-semibold">${product.annualInterestRate}% p.a.</p>
                                    </div>
                                    <div class="p-3 bg-purple-50 rounded">
                                        <p class="text-xs text-gray-600">Tenure</p>
                                        <p class="font-semibold">${product.minTenureMonths} - ${product.maxTenureMonths} months</p>
                                    </div>
                                </div>
                            </div>

                            ${product.description ? `
                            <div>
                                <p class="font-semibold mb-2">Description</p>
                                <p class="text-gray-700 text-sm">${product.description}</p>
                            </div>
                            ` : ''}
                        </div>
                    `;
                    document.getElementById('detailsModal').classList.remove('hidden');
                }
            } catch (error) {
                alert('Error loading product details');
            }
        }

        function closeDetailsModal() {
            document.getElementById('detailsModal').classList.add('hidden');
        }

        async function deleteProduct(id) {
            if (!confirm('Are you sure you want to delete this product?')) return;

            try {
                const response = await fetch(`/api/admin/loans/${id}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                const data = await response.json();
                if (data.success) {
                    alert('Product deleted successfully');
                    loadProducts();
                } else {
                    alert(data.message || 'Error deleting product');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting product');
            }
        }

        function logout() {
            localStorage.removeItem('adminToken');
            localStorage.removeItem('admin');
            window.location.href = '/admin/login';
        }

        // Mobile menu toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', () => {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('mobileOverlay').classList.toggle('active');
        });

        document.getElementById('mobileOverlay').addEventListener('click', () => {
            document.getElementById('sidebar').classList.remove('active');
            document.getElementById('mobileOverlay').classList.remove('active');
        });
    </script>
    <script src="/js/notifications.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
